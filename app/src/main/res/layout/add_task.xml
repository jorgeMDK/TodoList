<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/newEtTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añade un Recordatorio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/newEtTitle"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:ems="20"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:hint="Titulo"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newEtTopic" />

        <EditText
            android:id="@+id/newEtDescription"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:ems="20"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Descripción"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newEtTitle" />

        <TextView
            android:id="@+id/newTvRepeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Repetir"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newEtDescription" />

        <Spinner
            android:id="@+id/my_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newEtDescription"
            android:background="@color/transparent"
            app:layout_constraintEnd_toStartOf="@id/ivCalendar"
            android:popupBackground="@drawable/rounded_spinner" />

        <ImageButton
            android:id="@+id/ivCalendar"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:src="@drawable/calendario"
            android:scaleType="centerInside"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/newEtDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/image_button_tint" />

        <TextView
            android:id="@+id/tvRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todos los:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newTvRepeat" />

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/newTvRepeat"
            android:background="@color/transparent"
            app:layout_constraintEnd_toStartOf="@id/ivCalendar"
            android:popupBackground="@drawable/rounded_spinner" />

        <CheckBox
            android:id="@+id/chkAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=" Alarma"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRepeat" />

        <ImageButton
            android:id="@+id/ivAlarm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/agregar_alarma"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:layout_constraintStart_toEndOf="@id/chkAlarm"
            app:layout_constraintTop_toTopOf="@id/chkAlarm"
            app:tint="@color/image_button_alarm_tint" />

        <Button
            android:id="@+id/newBtAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Añadir"
            android:textSize="20sp"
            android:backgroundTint="@color/item_background"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chkAlarm" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

